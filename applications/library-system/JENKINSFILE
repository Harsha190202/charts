pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS22'
    }
    
    environment { 
        registryCredential = 'harsha3330-dockerhub'
        buildTimestamp = new java.text.SimpleDateFormat('yyyyMMdd-HHmmss').format(new java.util.Date())
        dockerImage = "harsha3330/library-management-system:${env.AppBranch}-${env.BUILD_NUMBER}-date-${buildTimestamp}"
        SONARQUBE_ENV = 'SonarQube'
    }
    stages {


        stage('Cleaning Workspace') {
            steps {
                cleanWs()
            }
        }
        
        stage("Library Next App Clone") {
            steps {
                script {
                    sh "git clone https://github.com/Harsha190202/library-management-system.git -b ${env.AppBranch}"
                    echo "Completed clone"
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir("./library-management-system/") {
                    withSonarQubeEnv(SONARQUBE_ENV) {
                        sh 'npx sonar-scanner' 
                    }
                }       
            }   
        }


         stage("Charts Clone") {
            steps {
                script {
                    withCredentials([string(credentialsId: 'github-pat')]){
                        sh "git clone https://github.com/Harsha190202/EKS.git -b ${env.GitBranch}"
                    }
                    
                }
            }
        }

        stage("Docker Build and Push") {
            steps {
                script {
                    sh "docker login"
                    sh "docker build -f EKS-Project/k8-manifests/library-app/Dockerfile -t library-management-app ."
                    sh "docker tag library-management-app:latest ${dockerImage}"
                    sh "docker push ${dockerImage}"
                }
            }
        }

        stage("TRIVY Image Scan") {
            steps {
                sh "trivy image ${dockerImage} > trivyimage.txt" 
                sh "docker rmi ${dockerImage}"
            }
        }

        stage("Deployment") {
            steps {
                script {
                    withCredentials([string(credentialsId: 'github-pat', variable: 'GITHUB_TOKEN')]) {
                    sh """
                    cd EKS

                    git remote set-url origin https://github.com/Harsha190202/charts.git
                    git checkout main 
                    git pull origin main
                    sed -i 's|imagetag: .*|imagetag: ${dockerImage}|g' k8-manifests/library-app/deployment.yaml
                    git commit -am "Jenkins image update"
                    git pull origin main
                    git push https://${GITHUB_TOKEN}@github.com/Harsha190202/EKS.git main

                    """
                    }
                }
            }
        }
    }
        
}

