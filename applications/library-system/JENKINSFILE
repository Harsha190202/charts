pipeline {
    agent any
    
    tools {
        nodejs 'NodeJS22'
    }
    
    environment { 
        registryCredential = 'harsha3330-dockerhub'
        buildTimestamp = new java.text.SimpleDateFormat('yyyyMMdd-HHmmss').format(new java.util.Date())
        dockerImage = "harsha3330/library-management-system:${env.AppBranch}-${env.BUILD_NUMBER}-date-${buildTimestamp}-dev"
        SONARQUBE_ENV = 'SonarQube'
    }
    stages {
      
        
        stage("Library Next App Clone") {
            steps {
                script {
                    sh "rm -rf ./library-management-system"
                    sh "git clone https://github.com/Harsha190202/library-management-system.git -b ${env.AppBranch}"
                    echo "Completed clone"
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                dir("./library-management-system/") {
                    withSonarQubeEnv(SONARQUBE_ENV) {
                        sh 'npx sonar-scanner' 
                    }
                }       
            }   
        }


        stage("Charts Clone") {
            steps {
                script {
                    sh "rm -rf ./charts"
                    sh "git clone https://github.com/Harsha190202/charts.git -b ${env.ChartsBranch}"
                }
            }
        }

        stage("Docker Build and Push") {
            steps {
                script {
                    sh "sudo docker build -f applications/library-system/DOCKERFILE -t library-management-app ."
                    sh "sudo docker tag library-management-app:latest ${dockerImage}"
                    sh "sudo docker push ${dockerImage}"
                    sh "sudo docker rmi ${dockerImage}"
                }
            }
        }

        stage("Deployment") {
            steps {
                script {
                    withCredentials([string(credentialsId: 'github-pat', variable: 'GITHUB_TOKEN')]) {
                    sh """
                    cd charts

                    git remote set-url origin https://github.com/Harsha190202/charts.git
                    git checkout main 
                    git pull origin main
                    sed -i 's|imagetag: .*|imagetag: ${dockerImage}|g' applications/library-system/values.yaml
                    git commit -am "Jenkins image update"
                    git pull origin main
                    git push https://${GITHUB_TOKEN}@github.com/Harsha190202/charts.git main

                    """
                    }
                }
            }
        }
    }
        
}

