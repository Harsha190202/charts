pipeline {
    agent any
    
    
    environment { 
        registryCredential = 'harsha3330-dockerhub'
        buildTimestamp = new java.text.SimpleDateFormat('yyyyMMdd-HHmmss').format(new java.util.Date())
        dockerImage = "harsha3330/mocktest-backend:${env.backendBranch}-${env.BUILD_NUMBER}-date-${buildTimestamp}"
        SONARQUBE_ENV = 'SonarQube'
    }

    tools {
        nodejs 'NodeJS22'
    }
    
    stages {
      
        
        stage("Backend-end Clone") {
            steps {
                script {
                    sh "rm -rf ./pyq-mock-backend"
                    sh "git clone https://github.com/pavan-kumar-06/pyq-mock-backend.git -b ${env.backendBranch}"
                    echo "Completed clone"
                }
            }
        }

       

        stage("Docker Build and Push") {
            steps {
                script {
                    sh "docker login"
                    sh "docker build -f applications/mocktest-backend/Dockerfile -t mocktest-backend ."
                    sh "docker tag mocktest-backend:latest ${dockerImage}"
                    sh "docker push ${dockerImage}"
                    sh "docker rmi ${dockerImage}"
                }
            }
        }

         stage("Charts Clone") {
            steps {
                script {
                    sh "rm -rf ./charts"
                    sh "git clone git@github.com:Harsha190202/charts.git -b ${env.ChartsBranch}"
                }
            }
        }

        stage("Deployment") {
            steps {
                script {
                    withCredentials([string(credentialsId: 'github-pat', variable: 'GITHUB_TOKEN')]) {
                    sh """
                    cd charts

                    git remote set-url origin https://github.com/Harsha190202/charts.git
                    git checkout main 
                    git pull origin main
                    sed -i 's|image: .*|image: ${dockerImage}|g' applications/mocktest-backend/deployment.yaml
                    git commit -am "Jenkins image update"
                    git pull origin main
                    git push https://${GITHUB_TOKEN}@github.com/Harsha190202/charts.git main

                    """
                    }
                }
            }
        }


        
    }
}
